<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.txwstudio.app.timetable">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/main_activity"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.txwstudio.app.timetable.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.txwstudio.app.timetable.SchoolMap"
            android:label="@string/traffic_schoolMap" />
        <activity
            android:name="com.txwstudio.app.timetable.CourseAddActivity"
            android:label="@string/activityAddCourse"
            android:screenOrientation="portrait" />
        <activity android:name="com.txwstudio.app.timetable.CourseEditActivity"></activity>
    </application>

</manifest>