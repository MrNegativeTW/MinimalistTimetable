<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Activity.CourseEditorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/all_default_margin">

            <!-- Course Name -->
            <TextView
                android:id="@+id/textView_courseEditor_courseNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_default_margin"
                android:text="@string/courseEditor_courseNameTitle" />

            <EditText
                android:id="@+id/editText_courseEditor_courseNameEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_default_margin"
                android:layout_marginEnd="@dimen/all_default_margin"
                android:background="@drawable/bg_edittext"
                android:hint="@string/courseEditor_courseNameEntry"
                android:inputType="text"
                android:padding="@dimen/all_default_margin"
                android:text="@={viewModel.location}" />

            <!-- Course Place -->
            <TextView
                android:id="@+id/textView_courseEditor_coursePlaceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/all_default_margin"
                android:text="@string/courseEditor_coursePlaceTitle" />

            <EditText
                android:id="@+id/textView_courseEditor_coursePlaceEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/all_default_margin"
                android:layout_marginEnd="@dimen/all_default_margin"
                android:background="@drawable/bg_edittext"
                android:hint="@string/courseEditor_coursePlaceEntry"
                android:inputType="text"
                android:padding="@dimen/all_default_margin"
                android:text="@={viewModel.location}" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>