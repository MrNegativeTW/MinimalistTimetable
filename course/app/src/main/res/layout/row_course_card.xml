<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/courseCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4aa285"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_normal">

        <TextView
            android:id="@+id/textView_beginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:text="09:00" />

        <TextView
            android:id="@+id/textView_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_courseLocation"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:text="12:00" />

        <TextView
            android:id="@+id/textView_courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_beginTime"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@id/textView_beginTime"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            tools:text="Computer Science" />

        <TextView
            android:id="@+id/textView_courseLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_courseName"
            android:layout_alignStart="@id/textView_courseName"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:text="at A301" />

        <TextView
            android:id="@+id/textView_profName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_courseName"
            android:layout_toEndOf="@id/textView_courseLocation"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:text=", by Prof. Hsu" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
