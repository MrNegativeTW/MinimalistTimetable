<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/generalSection">
        <EditTextPreference
            android:icon="@drawable/ic_label_outline_24dp"
            android:key="tableTitle_Pref"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/tableTitle"
            android:summary="@string/tableTitleMessage"
            android:defaultValue="Table" />
        <CheckBoxPreference
            android:icon="@drawable/ic_lightbulb_outline_24dp"
            android:key="lightMode_Pref"
            android:title="@string/lightMode"
            android:summary="@string/lightModeSummary"
            android:defaultValue="false" />
        <Preference
            android:icon="@drawable/ic_map_24dp"
            android:key="schoolMapPicker"
            android:title="@string/schoolMapPickerTitle"
            android:summary="@string/schoolMapPickerSummary"/>
        <Preference
            android:icon="@drawable/ic_event_note_24dp"
            android:key="schoolCalendarPicker"
            android:title="@string/schoolCalendarPickerTitle"
            android:summary="@string/schoolCalendarPickerSummary"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/aboutSection">
    <Preference
        android:icon="@drawable/ic_bug_24dp"
        android:title="@string/contactTitle"
        android:summary="@string/contactMessage">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://docs.google.com/forms/d/e/1FAIpQLSdNQ9j4dJXFX5Ie__uoH294vQeTsqjjMJniMR82WhXMPZlI8w/viewform?usp=sf_link" />
    </Preference>
    <Preference
        android:icon="@drawable/ic_code_24dp"
        android:title="@string/versionTitle"
        android:summary="@string/versionMessage"/>
    </PreferenceCategory>
</PreferenceScreen>