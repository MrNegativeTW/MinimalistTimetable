<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/generalSection">
    <EditTextPreference
        android:icon="@drawable/ic_label_outline_24dp"
        android:key="tableTitle_Pref"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/tableTitle"
        android:summary="@string/tableTitleMessage"
        android:defaultValue="Table" />
    <CheckBoxPreference
        android:icon="@drawable/ic_lightbulb_outline_24dp"
        android:key="lightMode_Pref"
        android:title="@string/lightMode"
        android:summary="@string/lightModeSummary"
        android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/aboutSection">
    <Preference
        android:icon="@drawable/ic_bug_24dp"
        android:title="@string/contactTitle"
        android:summary="@string/contactMessage"/>
    <Preference
        android:icon="@drawable/ic_code_24dp"
        android:title="@string/versionTitle"
        android:summary="@string/versionMessage"/>
    </PreferenceCategory>
</PreferenceScreen>